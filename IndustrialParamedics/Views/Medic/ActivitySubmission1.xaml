		            <x:String>13</x:String>
		            <x:String>14</x:String>
		            <x:String>15</x:String>
		        </Picker.Items>
    		</Picker>

           	<Label Text="Safe Work Permit:" 			Grid.Row="13" Grid.Column="0"/>
           	<Picker x:Name="safeWorkPermits" 
           		SelectedIndex="0" 
           		HorizontalOptions="FillAndExpand" 
           		Grid.Row="13" Grid.Column="1">
		        <Picker.Items>
		            <x:String>1</x:String> 
		            <x:String>2</x:String>
		            <x:String>3</x:String>
		            <x:String>4</x:String>
		            <x:String>5</x:String>
		            <x:String>6</x:String>
		            <x:String>7</x:String>
		            <x:String>8</x:String>
