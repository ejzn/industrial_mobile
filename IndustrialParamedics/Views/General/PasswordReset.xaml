<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="IndustrialParamedics.PasswordReset">
	<ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness"
                    iOS="20, 80, 20, 20"
                    Android="70, 20, 20, 20"/>
     </ContentPage.Padding>
    <ContentPage.Content>
    <ScrollView Orientation="Vertical">

	        <StackLayout VerticalOptions="FillAndExpand"
	                     HorizontalOptions="FillAndExpand"
	                     Orientation="Vertical"
	                     Spacing="15">
	            
	            <Label Text="Email" FontAttributes="Bold"/>
	            <Entry x:Name="email" Text="" />


	            <Button x:Name="resetButton" Text="Reset" Clicked="OnReset" TextColor="White" BorderColor="#0076FF" BorderWidth="1" BackgroundColor="#0076FF"/>
	            <Button x:Name="closeButton" Text="Cancel" Clicked="OnCancel" TextColor="White" BorderColor="#0076FF" BorderWidth="1" BackgroundColor="#0076FF"/>

	            <Label Text="Note: If your email is not verified you will have to contact app@ipsems.com for a manual reset" FontAttributes="Bold"/>
	        </StackLayout>
       </ScrollView>
    </ContentPage.Content>

</ContentPage>
