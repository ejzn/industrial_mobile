<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IndustrialParamedics.HomePage">

     <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness"
                    iOS="20, 80, 20, 20"
                    Android="70, 20, 20, 20"/>
     </ContentPage.Padding>
    <ContentPage.Content>
    <ScrollView Orientation="Vertical">

	        <StackLayout VerticalOptions="FillAndExpand"
	                     HorizontalOptions="FillAndExpand"
	                     Orientation="Vertical"
	                     Spacing="15">
	            <Image Source="IPSLogo.png" Scale="0.7" />
	            <Label Text="Email / Username:" />
	            <Entry x:Name="usernameText" Text="" />
	            <Label Text="Password" />
	            <Entry x:Name="passwordText" Text="" />
	            <Button x:Name="loginButton" Text="Login" Clicked="OnLogin" BorderColor="#0076FF" BorderWidth="1" />
	        </StackLayout>
       </ScrollView>
    </ContentPage.Content>

</ContentPage>